<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.View.SplashActivity">

    <ImageView
            android:id="@+id/spashlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logomtube3"
            tools:layout_editor_absoluteY="198dp"
            tools:layout_editor_absoluteX="116dp"
            tools:ignore="MissingConstraints" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="194dp"/>

    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="MTube" android:layout_alignParentStart="true"
            android:layout_below="@+id/spashlogo"
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" android:layout_marginTop="11dp"/>

</RelativeLayout>