<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="10dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/imgdetaillist"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/gambar"
                android:scaleType="fitXY"/>

        <RelativeLayout
                android:id="@+id/contentdetaillist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <TextView
                    android:id="@+id/titledetaillist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/channeldetaillist"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channel"
                    android:layout_below="@id/titledetaillist"
                    android:textSize="12dp"/>

        </RelativeLayout>
    </LinearLayout>
    <View
            android:id="@+id/garis4"
            android:layout_marginTop="15dp"
            android:layout_below="@id/contenthistory"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
</LinearLayout>